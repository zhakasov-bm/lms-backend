generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
}

enum Role {
  ADMIN
  MANAGER
  TEACHER
  STUDENT
}

model User {
  id          Int      @id @default(autoincrement())
  phone       String   @unique
  role        Role     @default(STUDENT)
  isVerified  Boolean  @default(false)
  createdAt   DateTime @default(now())

  fullName    String?

  enrollments        Enrollment[] @relation("StudentEnrollment")
  managedEnrollments Enrollment[] @relation("ManagerEnrollment")
  coursesCreated     Course[]     @relation("CourseAuthor")
}

model Course {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  price       Int      @default(0)

  coverImageKey String?   // MVP-де nullable, бірақ API-де міндетті етеміз
  introVideoUrl String?   // optional

  authorId Int
  author   User @relation("CourseAuthor", fields: [authorId], references: [id])

  enrollments Enrollment[]
  modules     CourseModule[]
}

model CourseModule {
  id          Int      @id @default(autoincrement())
  
  courseId    Int
  course      Course   @relation(fields: [courseId], references: [id])

  title       String
  order       Int
  videoUrl    String?
  isPreview   Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([courseId, order])
  @@index([courseId])
}

model Enrollment {
  id        Int      @id @default(autoincrement())

  userId   Int
  user     User @relation("StudentEnrollment", fields: [userId], references: [id])

  courseId Int
  course   Course @relation(fields: [courseId], references: [id])

  managerId Int?
  manager   User? @relation("ManagerEnrollment", fields: [managerId], references: [id])

  expiresAt DateTime?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())

  @@unique([userId, courseId])
}

enum OtpPurpose {
  REGISTER
  LOGIN
}

model OtpCode {
  id              Int        @id @default(autoincrement())
  phone           String
  purpose         OtpPurpose
  codeHash        String
  pendingFullName String?
  attempts        Int        @default(0)
  expiresAt       DateTime
  createdAt       DateTime   @default(now())

  @@index([phone, purpose])
}
